    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Sales Cards  -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <!-- Column -->
            <div class="col-md-6 col-lg-3" onclick="location.href='@Url.Action("AddEmployee","Employees")'">
                <div class="card card-hover">
