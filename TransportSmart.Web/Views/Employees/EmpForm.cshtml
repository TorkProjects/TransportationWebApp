                            <img style="display:none" height="100" width="100" src="@Model.Item3.FrontFaceforEmiratesID" />
                        </div>
                        @Html.ValidationMessageFor(m => m.Item3.FrontFaceforEmiratesID, "", new { @class = "text-danger col-12" })

                    </div>

                    <label for="flbackfaceforEmiratesID" class="col-sm-1 text-right control-label col-form-label">صورة الواجهة الخلفية للهوية</label>
                    <div class="col-sm-3">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="flbackfaceforEmiratesID" name="flbackfaceforEmiratesID" required>
                            <label class="custom-file-label" for="flbackfaceforEmiratesID">Choose file...</label>
                            <div class="invalid-feedback">Example invalid custom file feedback</div>
                            <img style="display:none" height="100" width="100" src="@Model.Item3.BackfaceForEmiratesID" />
                        </div>
                        @Html.ValidationMessageFor(m => m.Item3.BackfaceForEmiratesID, "", new { @class = "text-danger col-12" })

                    </div>
                </div>

            </div>
            <div class="border-top">
                <div class="card-body row" style="position: relative;">
                    <div class="col-md-5">

                    </div>
                    <button type="submit" id="btnSubmit" name="btnSubmit" class="btn btn-primary col-md-2" style="right: 15px; ">حفظ</button>
                    <div class="col-md-5">

                    </div>
                </div>
            </div>
            @*</form>*@
        }
    </div>
</div>



